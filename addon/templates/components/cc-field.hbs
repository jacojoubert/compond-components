<div class="cc-field">
  {{yield (hash
    states=states
    description=(component "cc-field--description"
      kind=kind
      size=size
    )
    input=(component input
      ids=ids
      size=size
      onFocusIn=(action "onFocusIn")
      onFocusOut=(action "onFocusOut")
    )
    label=(component "cc-field--label"
      kind=kind
      ids=ids
      size=size
    )
  )}}
</div>
